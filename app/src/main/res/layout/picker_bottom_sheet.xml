<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/picker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorHeading"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <!-- Scroll container to ensure long lists (e.g., zoom ratios) are scrollable -->
    <ScrollView
        android:id="@+id/picker_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:fillViewport="true"
        android:maxHeight="400dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Card style container replicating settings group visual -->
            <LinearLayout
                android:id="@+id/picker_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">
                <LinearLayout
                    android:id="@+id/picker_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/picker_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
