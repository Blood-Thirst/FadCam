<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:weightSum="3">

    <!-- AF mode toggle (continuous / off) -->
    <TextView
        android:id="@+id/tile_af_toggle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:background="?attr/colorDialog"
        android:gravity="center"
        android:fontFamily="@font/materialicons"
        android:text="center_focus_strong"
        android:contentDescription="Autofocus toggle"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        android:padding="6dp"
        android:clickable="true"
        android:focusable="true" />



    <!-- Exposure (single tile opens slider picker) -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:background="?attr/colorDialog"
        android:padding="6dp">

        <ImageView
            android:id="@+id/tile_exp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:contentDescription="Exposure compensation"
            android:src="@drawable/exposure_24px"
            android:tint="?attr/colorOnSurface"
            android:clickable="true"
            android:focusable="true" />

    </FrameLayout>

    <!-- Zoom ratio (quick access to zoom settings) -->
    <ImageView
        android:id="@+id/tile_zoom"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="?attr/colorDialog"
        android:padding="6dp"
        android:scaleType="center"
        android:src="@drawable/ic_zoom"
        android:contentDescription="Zoom ratio"
        android:tint="?attr/colorOnSurface"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
