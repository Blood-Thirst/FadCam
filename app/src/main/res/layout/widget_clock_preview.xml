<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clock_root_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/time_container_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:id="@+id/clock_time_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:text="8:05"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/clock_ampm_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="PM"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_container_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/time_container_preview"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/clock_date_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E0E0E0"
            android:textSize="18sp"
            android:text="Wed, 13 Aug"
            android:maxLines="1"
            android:gravity="end"/>

        <TextView
            android:id="@+id/clock_date_arabic_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#C0C0C0"
            android:textSize="16sp"
            android:text="٧ صفر ١٤٤٧"
            android:maxLines="1"
            android:gravity="end"/>
    </LinearLayout>
</RelativeLayout>
