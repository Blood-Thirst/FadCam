<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Widgets"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/helper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:text="Pin quick actions to your home screen for instant access. Long-press pin icons."/>

    <LinearLayout
        android:id="@+id/row_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <ImageView
            android:id="@+id/item_icon_start"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_play"
            android:tint="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/item_title_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Recording"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
    <ImageButton
            android:id="@+id/item_pin_start"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_save2"
            android:tint="@android:color/darker_gray"
            android:contentDescription="Pin Start to Home"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <ImageView
            android:id="@+id/item_icon_stop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_stop"
            android:tint="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/item_title_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Recording"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
    <ImageButton
            android:id="@+id/item_pin_stop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_save2"
            android:tint="@android:color/darker_gray"
            android:contentDescription="Pin Stop to Home"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_torch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <ImageView
            android:id="@+id/item_icon_torch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_torch"
            android:tint="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/item_title_torch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Torch"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
    <ImageButton
            android:id="@+id/item_pin_torch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_save2"
            android:tint="@android:color/darker_gray"
            android:contentDescription="Pin Torch to Home"/>
    </LinearLayout>

</LinearLayout>
