<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            android:tint="@android:color/white"/>
        <TextView
            android:id="@+id/header_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Recording"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Group Card Container -->
            <LinearLayout
                android:id="@+id/group_card_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

            <!-- Camera Selection Row -->
            <LinearLayout
                android:id="@+id/row_camera_type"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_vid_cam"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_camera_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <!-- Helper moved into dialog; reintroduce divider -->
            <View style="@style/SettingsDivider" />

            <!-- Lens Row -->
            <LinearLayout
                android:id="@+id/row_lens"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_debug"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lens"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_lens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Resolution Row -->
            <LinearLayout
                android:id="@+id/row_resolution"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_avc"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolution"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Frame Rate Row -->
            <LinearLayout
                android:id="@+id/row_framerate"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_debug"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frame Rate"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_framerate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Codec Row -->
            <LinearLayout
                android:id="@+id/row_codec"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_avc"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codec"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_codec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Bitrate Row -->
            <LinearLayout
                android:id="@+id/row_bitrate"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitrate"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_bitrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <!-- Divider removed -->

            <View style="@style/SettingsDivider" />

            <!-- Zoom Ratio Row -->
            <LinearLayout
                android:id="@+id/row_zoom_ratio"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_zoom"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zoom Ratio"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_zoom_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Video Splitting Row -->
            <LinearLayout
                android:id="@+id/row_video_splitting"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_debug"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Splitting"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_video_split_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Disabled"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Orientation Row (last without trailing divider) -->
            <LinearLayout
                android:id="@+id/row_orientation"
                style="@style/SettingsGroupRow"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orientation"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/value_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <!-- End group_card_video container -->
            </LinearLayout>
        </LinearLayout> <!-- outer padding container -->
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
