<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/picker_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/picker_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/picker_item_check_container"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/picker_item_check_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/picker_check_background"/>
        <ImageView
            android:id="@+id/picker_item_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            android:tint="#9CCC65" />
    </FrameLayout>
</LinearLayout>
