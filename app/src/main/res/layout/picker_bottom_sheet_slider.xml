<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picker_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:paddingStart="14dp"
    android:paddingEnd="12dp">

    <TextView
        android:id="@+id/picker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorHeading"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <View
        android:id="@+id/picker_title_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#262626"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:id="@+id/picker_slider_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_group_card_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <com.google.android.material.slider.Slider
            android:id="@+id/picker_slider"
            style="@style/Widget.MaterialComponents.Slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Plus/minus centered below the slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/picker_slider_minus"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:fontFamily="@font/materialicons"
                android:text="remove"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:contentDescription="Decrease"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/picker_slider_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:text="0" />

            <TextView
                android:id="@+id/picker_slider_plus"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:fontFamily="@font/materialicons"
                android:text="add"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:contentDescription="Increase"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/picker_slider_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:text="Reset"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="12dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/picker_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="14dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:visibility="gone"/>

</LinearLayout>
