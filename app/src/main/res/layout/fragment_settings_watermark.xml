<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:tint="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watermark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Preview Heading -->
            <TextView
                android:id="@+id/heading_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:text="@string/watermark_preview_heading"
                android:textColor="?attr/colorHeading"
                android:textStyle="bold" />

            <!-- Preview Card -->
            <FrameLayout
                android:id="@+id/group_card_preview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/watermark_preview_bg"
                android:padding="12dp">
                <TextView
                    android:id="@+id/text_watermark_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Captured by FadCam - 10/Aug/2025 06:27:43 AM"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </FrameLayout>
            <TextView
                android:id="@+id/text_preview_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/helper_watermark_preview"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

            <!-- Options Heading -->
            <TextView
                android:id="@+id/heading_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:text="@string/watermark_options_heading"
                android:textColor="?attr/colorHeading"
                android:textStyle="bold" />

            <!-- Options Card -->
            <LinearLayout
                android:id="@+id/group_card_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <!-- Watermark Style Row (value + arrow) -->
                <LinearLayout
                    android:id="@+id/row_watermark_option"
                    style="@style/SettingsGroupRow"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/watermark_style_row_title"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="?attr/colorHeading"/>
                        <TextView
                            android:id="@+id/value_watermark_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>
                <View style="@style/SettingsDivider" />

                <!-- Location Watermark Row -->
                <LinearLayout
                    android:id="@+id/row_location_watermark"
                    style="@style/SettingsGroupRow"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_location"
                        android:tint="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location Watermark"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="?attr/colorHeading"/>
                        <TextView
                            android:id="@+id/value_location_watermark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
